  <mapper namespace="kr.tracom.mapper.ST0301.ST0301Mapper">
  
   <select id="ST0301G0R0" resultType="Map">
		SELECT 		    B.ROUT_ID
					,   B.ROUT_GRP
					,	B.ROUT_GRP_NM
					,	B.ROUT_NM
		FROM		 	BMS_INCDNT_STAT A
		LEFT JOIN	  BMS_ROUT_MST B
			ON 		  A.ROUT_ID = B.ROUT_ID
	<where>
		<if test="TYPE == 'ALL' and CONTENT != null and CONTENT != ''">
			 ROUT_GRP_NM LIKE CONCAT('%',#{CONTENT},'%') || ROUT_NM LIKE CONCAT('%',#{CONTENT},'%') 
		</if>
		<if test="TYPE == 'ROUT_GRP_NM'">
			 ROUT_GRP_NM LIKE CONCAT('%',#{CONTENT},'%')
		</if>
		<if test="TYPE == 'ROUT_NM'">
			 ROUT_NM LIKE CONCAT('%',#{CONTENT},'%') 
		</if>
	</where>
		GROUP BY 	  A.ROUT_ID	
		ORDER BY ROUT_GRP_NM
	</select> 
	
	
	<select id="ST0301SHI0" resultType="Map">
